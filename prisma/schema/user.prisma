model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role UserRole @default(PATENT)
  needPasswordChange Boolean @default(true)
  status UserStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admin Admin?
  doctor Doctor?
  patient Patient?
  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  email String @unique
  name String
  contactNumber String
  address String?
  gender Gender
  profilePhoto String?
  isDeleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("admins")
}

model Doctor {
  id String @id @default(uuid())
  email String @unique
  name String
  contactNumber String
  address String?
  gender Gender
  profilePhoto String?
  qualification String
  registrationNumber String
  experience Int @default(0)
  currentWorkingPlace String
  designation String
  appoinmentFee Int
  isDeleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [email], references: [email])
  @@map("doctors")
}

model Patient {
  id String @id @default(uuid())
  email String @unique
  name String
  contactNumber String
  address String?
  gender Gender?
  profilePhoto String?
  isDeleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [email], references: [email])
  @@map("patients")
}
